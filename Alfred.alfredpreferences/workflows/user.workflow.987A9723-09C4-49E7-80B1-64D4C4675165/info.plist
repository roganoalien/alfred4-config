sfItems = pairedDevices.map(device =&gt; {
  state = device["connected"] ? "Connected" : "Not Connected"
  iconPath = device["connected"] ? "icon.png" : "icon_alt.png"

  return {
    variables: { connected: device["connected"] },
    uid: device["address"],
    title: device["name"],
    subtitle: state,
    arg: device["address"],
    icon: { path: iconPath }
  }
})

